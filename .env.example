# ===========================================
# API Gateway Configuration
# ===========================================
# Base URL for the API Gateway
# Examples:
#   - Local development: http://localhost:3000
#   - Staging: https://api-staging.tincadia.com
#   - Production: https://api.tincadia.com
NEXT_PUBLIC_API_URL=http://localhost:3000

NEXT_PUBLIC_GOOGLE_CLIENT_ID=insertar_id_de_google

# Request timeout in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# Authentication Configuration
# ===========================================
# Enable/disable token refresh (default: true)
NEXT_PUBLIC_AUTH_REFRESH_ENABLED=true

# Token storage key prefix (for localStorage)
NEXT_PUBLIC_AUTH_STORAGE_PREFIX=tincadia_

NEXT_PUBLIC_CLARITY_PROJECT_ID=tu_id_real_aqui_12345
